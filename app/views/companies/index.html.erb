<section id="companies_table">
    <div class="row">
        <div class="col">
            <h1>My Companies</h1>
        </div>
        <div class="col-4">
            <form id="searchForm">
                <input type="text" class="form-control" name="search" id="search" placeholder="Buscar">
            </form>
        </div>
    </div>
    <br>
    <div class="companiesTable">
        <table class="table table-striped table-hover table-bordered table-responsive" id="companies_index_table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Company Name</th>
                    <th scope="col">NIT</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phone Number</th>                    
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-center" id="pagination_nav" >
        <nav>
            <ul class="pagination" id="pagination">                
            </ul>
        </nav>
    </div>
</section>

<%= javascript_pack_tag 'CompaniesCtrl', 'data-turbolinks-track': 'reload' %>
